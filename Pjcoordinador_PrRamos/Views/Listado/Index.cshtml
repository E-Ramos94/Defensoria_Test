@model List<Pjcoordinador_PrRamos.Models.ViewModels.ListadoViewModel>
@{
    ViewBag.Title = "Listado de Requisiciones";
    int puesto = (int)System.Web.HttpContext.Current.Session["IdPuesto"];
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px">
    <a href="~/Listado/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Det_Requisicion</th>
                <th>Cantidad</th>
                <th>Precio_Unitario</th>
                <th>Total</th>
                <th>Empleado_Solicita</th>
                <th>Fecha_Solicita</th>
                <th>Estado</th>
                <th>Fecha_Grabada</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
        <tr>
            <td>@oElemento.idRequisicion</td>
            <td>@oElemento.detalleRequisicion</td>
            <td>@oElemento.cantidad</td>
            <td>@oElemento.precioUnitaro</td>
            <td>@oElemento.total</td>
            <td>@oElemento.idEmpleadoSolicita</td>
            <td>@oElemento.fechaSolicita</td>
            <td>@oElemento.Estado</td>
            <td>@oElemento.fechaGrabada</td>
            <td>
                @if (puesto == 1)
                {
                    <a class="btn btn-default" href="~/Listado/Editar/@oElemento.idRequisicion">Editar</a>
                    <a class="btn btn-danger" href="~/Listado/Eliminar/@oElemento.idRequisicion">Eliminar</a>
                }
                else if (puesto == 2)
                {
                    <a class="btn btn-default" href="~/Listado/Editar/@oElemento.idRequisicion">Editar</a>
                    <a class="btn btn-danger" href="~/Listado/Eliminar/@oElemento.idRequisicion">Eliminar</a>
                    <a class="btn btn-success" href="~/Listado/Revision/@oElemento.idRequisicion">Revisar</a>
                }
            </td>
        </tr>
            }
        </table>
    </div>
</div>